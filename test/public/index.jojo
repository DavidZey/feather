          --- BEGIN TEST 1
          <div style="border: 1px solid black;">
            <widget path="widgets/test/" id="test2">
              <options title="Test 2"></options>
              <contentTemplate>
                ------ BEGIN TEST 2
                <div style="border: 1px solid red;">
                  <widget path="widgets/test/" id="test3">
                    <options title="Test 3"></options>
                    <foo bar="baz"></foo>
                    <contentTemplate>
                      --------- TEST 3
                    </contentTemplate>
                  </widget>
                </div>
                ------ END TEST 2
              </contentTemplate>
            </widget>
          </div>
          --- END TEST 1
        </contentTemplate>
      </widget>
    <p>foo</p>
